{
  "name": "collab",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"ðŸš€SERVER,âš¡CLIENT\" --prefix-colors \"green,blue\" \"npm run server\" \"npm run client\"",
    "client": "next dev",
    "server": "npx y-websocket --host localhost --port 1234",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:turbo": "concurrently --names \"ðŸš€SERVER,âš¡CLIENT\" --prefix-colors \"green,blue\" \"npm run server\" \"npm run client:turbo\"",
    "client:turbo": "next dev --turbopack",
    "dev:kill": "concurrently --kill-others --names \"ðŸš€SERVER,âš¡CLIENT\" --prefix-colors \"green,blue\" \"npm run server\" \"npm run client\"",
    "dev:quiet": "concurrently --raw \"npm run server\" \"npm run client\"",
    "server:only": "npx y-websocket --host localhost --port 1234",
    "client:only": "next dev",
    "clean": "rimraf .next node_modules/.cache",
    "clean:win": "if exist .next rmdir /s /q .next && if exist node_modules\\.cache rmdir /s /q node_modules\\.cache",
    "fresh": "npm run clean && npm install && npm run dev",
    "fresh:win": "npm run clean:win && npm install && npm run dev",
    "type-check": "tsc --noEmit",
    "dev:debug": "concurrently --names \"ðŸŸ¢SERVER,ðŸ”µCLIENT\" --prefix-colors \"green,cyan\" \"npm run server:debug\" \"npm run client:debug\"",
    "server:debug": "npx y-websocket --host localhost --port 1234",
    "client:debug": "next dev",
    "client:win": "set NEXT_DISABLE_FONT_OPTIMIZATION=true&& next dev",
    "dev:win": "concurrently --names \"ðŸš€SERVER,âš¡CLIENT\" --prefix-colors \"green,blue\" \"npm run server\" \"npm run client:win\"",
    "postinstall": "echo Installation complete! Run npm run dev to start both servers"
  },
